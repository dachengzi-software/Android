<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_home_diet_chart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/layout_background_four"
            android:drawableTop="@drawable/diet_chart"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="18sp"
            android:text="Diet Chart" />

        <TextView
            android:id="@+id/tv_home_doctor"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/layout_background_four"
            android:drawableTop="@drawable/doctor_info"
            android:gravity="center"
            android:padding="5dp"
             android:textSize="18sp"
            android:text="Doctor Info." />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_home_vaccine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/layout_background_four"
            android:drawableTop="@drawable/vaccination_chart"
            android:gravity="center"
            android:padding="5dp"
             android:textSize="17sp"
            android:text="Vaccination Chart" />

        <TextView
            android:id="@+id/tv_home_gallery"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/layout_background_four"
            android:drawableTop="@drawable/gallery"
            android:gravity="center"
            android:padding="5dp"
             android:textSize="18sp"
            android:text="Gallery" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_home_notes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/layout_background_four"
            android:drawableTop="@drawable/important_notes"
            android:gravity="center"
            android:padding="5dp"
             android:textSize="18sp"
            android:text="Important Note" />

        <TextView
            android:id="@+id/tv_home_medical_history"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/layout_background_four"
            android:drawableTop="@drawable/medical_history"
            android:gravity="center"
            android:padding="5dp"
             android:textSize="18sp"
            android:text="Medical History" />
    </LinearLayout>

</LinearLayout>