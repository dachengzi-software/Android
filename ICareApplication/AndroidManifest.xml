<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ftfl.icareapplication"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light" >
        <activity
            android:name=".ICareActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ICareCreateProfileActivity"
            android:label="@string/title_activity_icare_create_profile" >
        </activity>
        <activity
            android:name=".ICareProfileDataPreviewActivity"
            android:label="@string/title_activity_icare_profile_data_preview" >
        </activity>
        <activity
            android:name=".ICareCreateDietChartActivity"
            android:label="@string/title_activity_icare_create_diet_chart" >
        </activity>
        <activity
            android:name=".ICareDietChartListActivity"
            android:label="@string/title_activity_icare_diet_chart_list" >
        </activity>
        <activity
            android:name=".ICareDietChartPreviewActivity"
            android:label="@string/title_activity_icare_diet_chart_preview" >
        </activity>
    </application>

</manifest>
