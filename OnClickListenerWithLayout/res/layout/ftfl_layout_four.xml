<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="4"
    tools:context="com.ftfl.ftfllayout.FtflLayout" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4" >

        <View
            android:id="@+id/holo_blue_dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/holo_blue_dark"
            android:onClick="viewOneListenear" />

        <View
             android:id="@+id/holo_blue_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="viewOneListenear"
            android:background="@android:color/holo_blue_light" />

        <View
             android:id="@+id/holo_green_dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="viewOneListenear"
            android:background="@android:color/holo_green_dark" />

        <View
             android:id="@+id/holo_green_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="viewOneListenear"
            android:background="@android:color/holo_green_light" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4" >

        <View
              android:id="@+id/holo_orange_dark"
            android:layout_width="0dp"
            
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/holo_orange_dark" />

        <View
              android:id="@+id/holo_orange_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/holo_orange_light" />

        <View
              android:id="@+id/holo_red_dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/holo_red_dark" />

        <View
              android:id="@+id/holo_red_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/holo_red_light" />
    </LinearLayout>

    <LinearLayout
      
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
              android:id="@+id/layout_learning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@android:drawable/ic_menu_agenda"
            android:gravity="center_horizontal"
            android:text="@string/ftfl"
            android:textColor="@android:color/holo_purple"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv1"
            android:contentDescription="@string/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          android:background="@android:color/holo_orange_light"
            android:src="@drawable/ic_launcher"
            android:onClick="imageViewListenear"
                    android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

        <ImageView
            android:id="@+id/iv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_orange_light"
             android:contentDescription="@string/image"
            android:src="@drawable/ic_launcher" 
            android:onClick="imageViewListenear"
                    android:layout_below="@+id/iv1"
        android:layout_toRightOf="@+id/iv1"/>

        <ImageView
            android:id="@+id/iv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:background="@android:color/holo_orange_light"
             android:contentDescription="@string/image"
            android:src="@drawable/ic_launcher" 
              android:layout_above="@+id/iv2"
              android:onClick="imageViewListenear"
        android:layout_toRightOf="@+id/iv2"/>

        <ImageView
            android:id="@+id/iv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:background="@android:color/holo_orange_light"
             android:contentDescription="@string/image"
            android:src="@drawable/ic_launcher"
            android:onClick="imageViewListenear"
             android:layout_below="@+id/iv3"
        android:layout_toRightOf="@+id/iv3" />

        <ImageView
            android:id="@+id/iv5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_orange_light"
             android:contentDescription="@string/image"
            android:src="@drawable/ic_launcher"
             android:layout_above="@+id/iv4"
             android:onClick="imageViewListenear"
        android:layout_toRightOf="@+id/iv4" />
    </RelativeLayout>

</LinearLayout>